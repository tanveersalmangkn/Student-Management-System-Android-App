<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudentUpdateDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Registration Table"
            android:textAlignment="center"
            android:textSize="25sp"
            android:padding="10dp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_round"
            android:hint="Enter Student Name"
            android:id="@+id/updateStudentName"
            android:inputType="text"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_round"
            android:hint="Enter Student AGE"
            android:id="@+id/updateStudentAge"
            android:inputType="number"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_round"
            android:hint="Enter Student Class"
            android:id="@+id/updateStudentClass"
            android:inputType="text"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_round"
            android:hint="Enter Student Reg no"
            android:id="@+id/updateStudentRegno"
            android:inputType="text"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Gender"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            />
        <RadioButton
            android:id="@+id/updateMale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"
            />
        <RadioButton
            android:id="@+id/updateFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_round"
            android:hint="Enter Student Address"
            android:id="@+id/updateStudentAddress"
            android:inputType="text"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_round"
            android:hint="Enter Student Cell no"
            android:id="@+id/updateStudentCell"
            android:inputType="number"
            android:layout_marginTop="5dp"
            />
        <Button
            android:id="@+id/updateIt"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="@drawable/button_friend"
            />


    </LinearLayout>
</LinearLayout>